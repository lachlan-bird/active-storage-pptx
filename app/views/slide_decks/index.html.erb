<p id="notice"><%= notice %></p>

<h1>Slide Decks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slide_decks.each do |slide_deck| %>
      <tr>
        <td><%= slide_deck.name %></td>
        <td><%= link_to 'Show', slide_deck %></td>
        <td><%= link_to 'Edit', edit_slide_deck_path(slide_deck) %></td>
        <td><%= link_to 'Destroy', slide_deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slide Deck', new_slide_deck_path %>
